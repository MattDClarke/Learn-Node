extend layout 

include mixins/_storeCard

block content 
    .inner
        h2 #{tag || 'Tags'}
        //- pre= h.dump(tags)

        if tags
            ul.tags 
                each t in tags
                    li.tag
                        a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
                            //- 2 ways to add propery value as string
                            span.tag__text #{t._id}
                            span.tag__count= t.count
            //- pre=h.dump(stores)
        if !tags.length 
            p There are no stores with tags.
        .stores
            each store in stores 
                +storeCard(store)