mixin storeCard(store = {})
    .store
        .store__hero
            .store__actions
                //- author field not populated - just need id. 
                //- only display edit icon if user created the store
                //- pre= h.dump(store.author)
                //- if user -> check if there is a logged in user
                if user && store.author.equals(user._id)
                    .store__action.store__action--edit
                        a(href=`/stores/${store._id}/edit`)
                            //- != means writing HTML, h.icon accesses the icons folder
                            != h.icon('pencil')    
            //- display uploaded image or default img 
            img(src=`/uploads/${store.photo || 'store.png'}`)
            h2.title 
                a(href=`/store/${store.slug}`) #{store.name}
        .store__details
            p= store.description.split(' ').slice(0, 25).join(' ')